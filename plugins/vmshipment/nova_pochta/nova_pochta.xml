                    <option value="0.01">VMSHIPMENT_NP_ORDER_PARAMS_DEF_SIZE_UNITS_CENTIMETERS</option>
                    <option value="1">VMSHIPMENT_NP_ORDER_PARAMS_DEF_SIZE_UNITS_METERS</option>
                </field>


